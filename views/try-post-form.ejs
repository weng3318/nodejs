<%- include('parts/html_head') %>
<%- include('parts/html_navbar') %>
<div class="container">

        <form method="post">
                <div class="form-group">
                  <label for="email">電子信箱</label>
                  <input type="text" class="form-control" id="email" placeholder="請輸入email" name="email">
                  
                    <% if(locals.email){ %>
                    <small><%= email %></small>
                    <% } %>

                </div>

                <div class="form-group">
                  <label for="Password">密碼</label>
                  <input type="text" class="form-control" id="Password" placeholder="請輸入密碼" name="password">
                 
                  <% if(locals.password) %>
                  <small><%= locals.password ? locals.password : '' %></small>

                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
        </form> 

</div>
